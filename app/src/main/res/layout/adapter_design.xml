<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Datum"
        android:id="@+id/textView_adapter_datum" />

    <TextView
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Taetigkeit"
        android:id="@+id/textView_adapter_taetigkeit"
        android:layout_below="@+id/textView_adapter_datum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aufstellung"
        android:id="@+id/textView_adapter_aufstellung"
        android:layout_gravity="right"
        android:layout_below="@+id/textView_adapter_datum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_adapter_taetigkeit"
        android:layout_toEndOf="@+id/textView_adapter_taetigkeit"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zeit:"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView_adapter_taetigkeit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zeit"
        android:id="@+id/textView_adapter_zeit"
        android:layout_below="@+id/textView_adapter_aufstellung"
        android:layout_alignRight="@+id/textView_adapter_aufstellung"
        android:layout_alignEnd="@+id/textView_adapter_aufstellung"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:gravity="right"/>
</RelativeLayout>